<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
    x:Class="AppFinanc.MVVM.Views.ViewGeral"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    Title="Geral"
    BackgroundColor="#0D1E2B">

    <VerticalStackLayout>

        <Border
            Margin="0,-5,0,0"
            BackgroundColor="#0C1318"
            HeightRequest="100"
            HorizontalOptions="FillAndExpand"
            Stroke="#20224E70"
            StrokeShape="RoundRectangle 0,0,40,40">

            <StackLayout
                Margin="15,0,0,0"
                HorizontalOptions="Start"
                Orientation="Horizontal"
                Spacing="50"
                VerticalOptions="Center">
                <Label
                    FontSize="15"
                    HorizontalOptions="Center"
                    Text="Valor Total:"
                    TextColor="White"
                    VerticalOptions="Center" />
                <Label
                    FontSize="15"
                    HorizontalOptions="Center"
                    Text="R$ 00,00"
                    TextColor="White"
                    VerticalOptions="Center" />
            </StackLayout>

        </Border>
    </VerticalStackLayout>
</ContentPage>